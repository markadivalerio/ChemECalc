<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/calc_layout_wrapper"
                                             android:visibility="visible" android:minHeight="1dp"
                                             tools:layout_editor_absoluteY="81dp">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/spinner2"
            android:textSize="8pt"
            android:ellipsize="none"
            app:layout_constraintTop_toTopOf="@+id/spinner1" app:layout_constraintBottom_toBottomOf="@+id/spinner1"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText2" android:entries="@array/nominal_size"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:id="@+id/spinner1"
            android:textSize="8pt"
            android:layout_marginTop="8dp"
            android:ellipsize="none"
            app:layout_constraintTop_toBottomOf="@+id/editText1" app:layout_constraintEnd_toEndOf="@+id/editText1"
            app:layout_constraintStart_toStartOf="@+id/editText1" android:entries="@array/sched"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Gal/min" app:layout_constraintTop_toBottomOf="@+id/divider" android:textSize="12sp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editText2"/>

    <EditText
            android:id="@+id/editText2"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Specific Gravity"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/editText1"
            app:layout_constraintBottom_toBottomOf="@+id/editText1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/editText3"/>

    <EditText
            android:id="@+id/editText3"
            android:layout_width="114dp"
            android:layout_height="36dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Viscosity" android:textSize="12sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/editText2" app:layout_constraintTop_toTopOf="@+id/editText2"/>

    <EditText
            android:id="@+id/editText4"
            android:layout_width="114dp"
            android:layout_height="36dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Actual Diam" android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/spinner2" app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            app:layout_constraintStart_toEndOf="@+id/spinner2" android:layout_marginStart="8dp"/>

    <View
            android:id="@+id/divider"
            android:layout_width="368dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"/>

    <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.25"/>
    <TextView
            android:text="Description"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/description" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>
    <TextView
            android:text="Pressure Drop ="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:textStyle="bold"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="@+id/spinner1" app:layout_constraintEnd_toEndOf="@+id/spinner1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner1"
            android:hint="Pipe Length" android:textSize="12sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText5"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="@+id/editText4"
            app:layout_constraintStart_toStartOf="@+id/editText4"
            app:layout_constraintBottom_toBottomOf="@+id/spinner" app:layout_constraintTop_toTopOf="@+id/spinner"
            android:hint="Roughness Factor"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" app:layout_constraintStart_toStartOf="@+id/spinner2"
            app:layout_constraintEnd_toEndOf="@+id/spinner2"
            app:layout_constraintTop_toTopOf="@+id/editText" app:layout_constraintBottom_toBottomOf="@+id/editText"/>
</android.support.constraint.ConstraintLayout>